	"main": "./dist/src/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rioam2/starter-npm-package-typescript.git"
	},
	"bugs": {
		"url": "https://github.com/rioam2/starter-npm-package-typescript/issues"
